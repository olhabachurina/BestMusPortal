@model BestMusPortal.ViewModels.SongViewModel

@{
    ViewData["Title"] = "Delete Song";
}

<h1>Delete Song</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Song</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Title
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Title)
        </dd>
        <dt class="col-sm-2">
            Artist
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Artist)
        </dd>
        <dt class="col-sm-2">
            Genre
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Genre.Name)
        </dd>
        <dt class="col-sm-2">
            Mood
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Mood)
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="SongId" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Index">Back to List</a>
    </form>
</div>